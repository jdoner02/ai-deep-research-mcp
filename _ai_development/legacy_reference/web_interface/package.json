{
  "name": "ai-deep-research-web-interface",
  "version": "1.0.0",
  "description": "Web interface for AI Deep Research MCP System - Interactive research query interface with comprehensive testing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:accessibility": "jest --testNamePattern=\"accessibility\"",
    "test:ui": "jest --testNamePattern=\"ui|UI\"",
    "test:integration": "jest --testNamePattern=\"integration\"",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "lint": "eslint . --ext .js,.json",
    "format": "prettier --write ."
  },
  "keywords": ["ai", "research", "mcp", "deep-research", "web-interface", "nodejs", "testing", "accessibility"],
  "author": "Test Guardian Agent",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "path": "^0.12.7",
    "child_process": "^1.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.2",
    "axe-core": "^4.8.2",
    "jest-axe": "^8.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "socket.io-client": "^4.7.4",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "puppeteer": "^21.6.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!playwright.config.js",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "testTimeout": 30000
  }
}
